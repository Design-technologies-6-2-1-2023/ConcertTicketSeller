<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:backgroundTint="@color/grey"
    app:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="353dp">

        <!--text view for displaying news title-->

        <!--text view for displaying news description-->

        <TextView
            android:id="@+id/idEventTitle"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@id/idDate"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="117dp"
            android:padding="4dp"
            android:text="News Title"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/idCost"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="193dp"
            android:layout_marginEnd="2dp"
            android:padding="4dp"
            android:text="Стоимость"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="189dp"
            android:layout_marginEnd="198dp"
            android:padding="4dp"
            android:text="Стоимость" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginTop="189dp"
            android:layout_marginEnd="198dp"
            android:layout_marginBottom="272dp"
            app:srcCompat="@drawable/free_icon_ruble_1868089" />

        <TextView
            android:id="@+id/idEventLoc"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/idCost"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="3dp"
            android:padding="4dp"
            android:text="Местоположение"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="216dp"
            android:layout_marginEnd="199dp"
            android:padding="4dp"
            android:text="Местоположение" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="50dp"
            android:layout_height="20dp"

            android:layout_marginStart="-1dp"
            android:layout_marginTop="216dp"
            android:layout_marginEnd="199dp"
            android:layout_marginBottom="412dp"
            app:srcCompat="@drawable/free_icon_place_711170" />

        <TextView
            android:id="@+id/idDate"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/idEventLoc"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="6dp"
            android:padding="4dp"
            android:text="Дата"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/idEventLoc"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="198dp"
            android:padding="4dp"
            android:text="Дата" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="50dp"
            android:layout_height="20dp"


            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-1dp"
            android:layout_marginBottom="88dp"
            app:srcCompat="@drawable/free_icon_dates_4253987" />

        <Button
            android:id="@+id/buy"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="133dp"
            android:layout_marginEnd="41dp"
            android:background="@drawable/myutton"
            android:padding="4dp"
            android:text="Купить" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="52dp"
            android:background="?android:attr/selectableItemBackground"

            app:srcCompat="@drawable/like_3ekrj_vojgm" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>